{
"manifest_version": 3,
  "name": "BlockBet - Bloqueador de Apuestas",
  "version": "1.0",
  "description": "Bloquea sitios de apuestas para ayudarte en tu recuperaci√≥n",
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}